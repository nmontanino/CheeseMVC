<h1>Edit Cheese @ViewBag.cheese.Name (ID = @ViewBag.cheese.CheeseId)</h1>

<form method="post">

    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" type="text" id="name" value="@ViewBag.cheese.Name"/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" id="description" >@ViewBag.cheese.Description</textarea>
    </div>

    <input type="hidden" value="@ViewBag.cheese.CheeseId" name="id" />
    <input class="btn btn-default" type="submit" value="Edit Cheese" />

</form>