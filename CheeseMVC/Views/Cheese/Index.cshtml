@model List<CheeseMVC.Models.Cheese>

<h1>My Cheese</h1>

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Category</th>
        <th>Rating</th>
        <th>Modify</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
            <td>@cheese.Rating</td>
            <td><a asp-controller="Cheese" asp-action="Edit" asp-route-cheeseId="@cheese.ID" role="button" class="btn-sm btn-warning">Edit</a></td>
        </tr>
    }
</table>

@if (Model.Count == 0)
{
    <p>No cheeses yet.</p>
}

<p><a asp-controller="Cheese" asp-action="Add" role="button" class="btn btn-warning">Add Cheese</a></p>