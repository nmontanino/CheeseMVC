@model List<CheeseMVC.Models.Cheese>

<h1>My Cheese</h1>

@if (Model.Count == 0)
{
    <p>No cheeses yet.</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>
            <td>@cheese.Name</td>
            <td>@cheese.Description</td>
        </tr>
    }
</table>

